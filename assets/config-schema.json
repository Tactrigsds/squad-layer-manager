{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "$schema": {"type": "string"},
    "topBarColor": {
      "description": "this should be set to null for production",
      "anyOf": [{"default": "green", "type": "string"}, {"type": "null"}]
    },
    "warnPrefix": {
      "description": "Prefix to use for warnings",
      "default": "SLM: ",
      "anyOf": [{"type": "string"}, {"type": "null"}]
    },
    "postRollAnnouncementsTimeout": {
      "description": "How long to wait before sending post-roll reminders",
      "default": "5m",
      "type": "string",
      "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
    },
    "fogOffDelay": {
      "description": "the delay before fog is automatically turned off",
      "default": "25s",
      "type": "string",
      "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
    },
    "servers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"description": "ID of the server", "type": "string"},
          "displayName": {
            "description": "Display name of the server",
            "type": "string"
          },
          "adminListSources": {
            "description": "specify which sources to include from adminListSources. by default will include all sources",
            "type": "array",
            "items": {"type": "string"}
          },
          "adminIdentifyingPermissions": {
            "description": "what ingame permissions identify an admin for SLM's purposes",
            "default": ["canseeadminchat"],
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "startvote",
                "changemap",
                "pause",
                "cheat",
                "private",
                "balance",
                "kick",
                "ban",
                "config",
                "cameraman",
                "immune",
                "manageserver",
                "featuretest",
                "reserve",
                "demos",
                "demo",
                "ClientDemos",
                "debug",
                "teamchange",
                "forceteamchange",
                "canseeadminchat"
              ]
            }
          },
          "enabled": {
            "description": "Whether the server is enabled",
            "default": true,
            "type": "boolean"
          },
          "connections": {
            "type": "object",
            "properties": {
              "rcon": {
                "type": "object",
                "properties": {
                  "host": {"type": "string", "minLength": 1},
                  "port": {"type": "number", "minimum": 1, "maximum": 65535},
                  "password": {"type": "string", "minLength": 1}
                },
                "required": ["host", "port", "password"]
              },
              "logs": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "type": {"type": "string", "const": "log-receiver"},
                      "token": {"default": "dev", "type": "string"}
                    },
                    "required": ["type"]
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": {"type": "string", "const": "sftp"},
                      "host": {"type": "string", "minLength": 1},
                      "port": {
                        "type": "number",
                        "minimum": 1,
                        "maximum": 65535
                      },
                      "username": {"type": "string", "minLength": 1},
                      "password": {"type": "string", "minLength": 1},
                      "logFile": {"type": "string", "minLength": 1}
                    },
                    "required": [
                      "type",
                      "host",
                      "port",
                      "username",
                      "password",
                      "logFile"
                    ]
                  }
                ]
              }
            },
            "required": ["rcon", "logs"]
          },
          "remindersAndAnnouncementsEnabled": {
            "description": "Whether reminders/annoucements for admins are enabled",
            "default": true,
            "type": "boolean"
          },
          "defaultServer": {"default": false, "type": "boolean"},
          "navLinks": {
            "description": "Server-specific links to display in the navbar dropdown menu",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {"type": "string"},
                "url": {"type": "string", "format": "uri"}
              },
              "required": ["label", "url"]
            }
          }
        },
        "required": ["id", "displayName", "connections"]
      }
    },
    "chat": {
      "default": {},
      "type": "object",
      "properties": {
        "warnSuppressionPatterns": {
          "description": "Regex patterns to suppress warning messages",
          "default": [],
          "type": "array",
          "items": {"type": "string"}
        },
        "broadcastSuppressionPatterns": {
          "description": "Regex patterns to suppress broadcast messages. these will not apply to broadcasts sent via an ingame command.",
          "default": [],
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "layerQueue": {
      "type": "object",
      "properties": {
        "lowQueueWarningThreshold": {
          "description": "Number of layers in the queue to trigger a low queue size warning",
          "default": 1,
          "type": "number",
          "exclusiveMinimum": 0
        },
        "adminQueueReminderInterval": {
          "description": "How often to remind admins to maintain the queue. Low queue warnings happen half as often.",
          "default": "5m",
          "type": "string",
          "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
        },
        "maxQueueSize": {
          "description": "Maximum number of layers that can be in the queue",
          "default": 20,
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        }
      }
    },
    "vote": {
      "type": "object",
      "properties": {
        "voteDuration": {
          "description": "Duration of a vote",
          "default": "180s",
          "type": "string",
          "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
        },
        "startVoteReminderThreshold": {
          "description": "How far into a match to start reminding admins to start a vote",
          "default": "20m",
          "type": "string",
          "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
        },
        "voteReminderInterval": {
          "description": "How often to remind users to vote",
          "default": "30s",
          "type": "string",
          "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
        },
        "internalVoteReminderInterval": {
          "description": "How often to remind amdins to vote in an internal vote",
          "default": "15s",
          "type": "string",
          "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
        },
        "autoStartVoteDelay": {
          "description": "Delay before autostarting a vote from the start of the current match. Set to null to disable auto-starting votes",
          "anyOf": [
            {
              "default": "20m",
              "description": "allows specification of time in seconds, minutes, hours, days, weeks, or milliseconds with the format [number][unit]. converts to milliseconds",
              "type": "string",
              "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
            },
            {"type": "null"}
          ]
        },
        "voteDisplayProps": {
          "description": "What parts of a layer setup should be displayed",
          "default": ["map", "gamemode"],
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["map", "gamemode", "layer", "factions", "units"]
          }
        },
        "finalVoteReminder": {
          "description": "How far in advance the final vote reminder should be sent",
          "default": "10s",
          "type": "string",
          "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
        },
        "maxNumVoteChoices": {
          "description": "Maximum number of choices allowed in a vote",
          "default": 5,
          "type": "integer",
          "minimum": 1,
          "maximum": 50
        }
      }
    },
    "squadServer": {
      "type": "object",
      "properties": {
        "sftpPollInterval": {
          "default": "1s",
          "description": "allows specification of time in seconds, minutes, hours, days, weeks, or milliseconds with the format [number][unit]. converts to milliseconds",
          "type": "string",
          "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
        },
        "sftpReconnectInterval": {
          "default": "5s",
          "description": "allows specification of time in seconds, minutes, hours, days, weeks, or milliseconds with the format [number][unit]. converts to milliseconds",
          "type": "string",
          "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
        }
      }
    },
    "steamLinkCodeExpiry": {
      "description": "Duration of a steam account link code",
      "default": "15m",
      "type": "string",
      "pattern": "^[0-9._]+(s|m|h|d|w|ms)$"
    },
    "commandPrefix": {
      "description": "A string with no whitespace characters",
      "type": "string",
      "pattern": "^\\S+$"
    },
    "commands": {
      "default": {
        "help": {
          "scopes": ["admin"],
          "strings": ["help", "h"],
          "enabled": true
        },
        "requestFeedback": {
          "scopes": ["admin"],
          "strings": ["feedback", "fb"],
          "enabled": true
        },
        "startVote": {
          "scopes": ["admin"],
          "strings": ["startvote", "sv"],
          "enabled": true
        },
        "abortVote": {
          "scopes": ["admin"],
          "strings": ["abortvote", "av"],
          "enabled": true
        },
        "showNext": {
          "scopes": ["admin"],
          "strings": ["shownext", "sn"],
          "enabled": true
        },
        "enableSlmUpdates": {
          "scopes": ["admin"],
          "strings": ["enable-slm"],
          "enabled": true
        },
        "disableSlmUpdates": {
          "scopes": ["admin"],
          "strings": ["disable-slm"],
          "enabled": true
        },
        "getSlmUpdatesEnabled": {
          "scopes": ["admin"],
          "strings": ["get-slm-status"],
          "enabled": true
        },
        "linkSteamAccount": {
          "scopes": ["admin"],
          "strings": ["link-steam-account"],
          "enabled": false
        },
        "flag": {"scopes": ["admin"], "strings": ["flag"], "enabled": true},
        "removeFlag": {
          "scopes": ["admin"],
          "strings": ["removeFlag", "rf"],
          "enabled": true
        },
        "listFlags": {
          "enabled": true,
          "scopes": ["admin"],
          "strings": ["listFlags", "lf"]
        }
      },
      "type": "object",
      "properties": {
        "help": {
          "default": {
            "scopes": ["admin"],
            "strings": ["help", "h"],
            "enabled": true
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["help", "h"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"default": true, "type": "boolean"}
          }
        },
        "requestFeedback": {
          "default": {
            "scopes": ["admin"],
            "strings": ["feedback", "fb"],
            "enabled": true
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["feedback", "fb"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"default": true, "type": "boolean"}
          }
        },
        "startVote": {
          "default": {
            "scopes": ["admin"],
            "strings": ["startvote", "sv"],
            "enabled": true
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["startvote", "sv"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"default": true, "type": "boolean"}
          }
        },
        "abortVote": {
          "default": {
            "scopes": ["admin"],
            "strings": ["abortvote", "av"],
            "enabled": true
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["abortvote", "av"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"default": true, "type": "boolean"}
          }
        },
        "showNext": {
          "default": {
            "scopes": ["admin"],
            "strings": ["shownext", "sn"],
            "enabled": true
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["shownext", "sn"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"default": true, "type": "boolean"}
          }
        },
        "enableSlmUpdates": {
          "default": {
            "scopes": ["admin"],
            "strings": ["enable-slm"],
            "enabled": true
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["enable-slm"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"default": true, "type": "boolean"}
          }
        },
        "disableSlmUpdates": {
          "default": {
            "scopes": ["admin"],
            "strings": ["disable-slm"],
            "enabled": true
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["disable-slm"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"default": true, "type": "boolean"}
          }
        },
        "getSlmUpdatesEnabled": {
          "default": {
            "scopes": ["admin"],
            "strings": ["get-slm-status"],
            "enabled": true
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["get-slm-status"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"default": true, "type": "boolean"}
          }
        },
        "linkSteamAccount": {
          "default": {
            "scopes": ["admin"],
            "strings": ["link-steam-account"],
            "enabled": false
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["link-steam-account"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"type": "boolean"}
          }
        },
        "flag": {
          "default": {
            "scopes": ["admin"],
            "strings": ["flag"],
            "enabled": true
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["flag"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"default": true, "type": "boolean"}
          }
        },
        "removeFlag": {
          "default": {
            "scopes": ["admin"],
            "strings": ["removeFlag", "rf"],
            "enabled": true
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["removeFlag", "rf"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"default": true, "type": "boolean"}
          }
        },
        "listFlags": {
          "default": {
            "enabled": true,
            "scopes": ["admin"],
            "strings": ["listFlags", "lf"]
          },
          "type": "object",
          "properties": {
            "strings": {
              "description": "Command strings that trigger this command when prefixed with the command prefix",
              "default": ["listFlags", "lf"],
              "type": "array",
              "items": {
                "description": "A string with no whitespace characters",
                "type": "string",
                "pattern": "^\\S+$"
              }
            },
            "scopes": {
              "description": "Scopes in which this command is available",
              "default": ["admin"],
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            },
            "enabled": {"default": true, "type": "boolean"}
          }
        }
      }
    },
    "adminListSources": {
      "type": "object",
      "propertyNames": {"type": "string"},
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {"type": "string", "enum": ["remote", "local", "ftp"]},
          "source": {"type": "string"}
        },
        "required": ["type", "source"]
      }
    },
    "homeDiscordGuildId": {
      "description": "A string representation of a big integer that is parsed to a BigInt",
      "type": "string",
      "pattern": "^-?\\d+$"
    },
    "repoUrl": {
      "description": "URL of the repository",
      "type": "string",
      "format": "uri"
    },
    "issuesUrl": {
      "description": "URL of the issues page",
      "type": "string",
      "format": "uri"
    },
    "globalRolePermissions": {
      "description": "Configures what roles have what permissions. (globally scoped permissions only)",
      "type": "object",
      "propertyNames": {"type": "string"},
      "additionalProperties": {
        "type": "array",
        "items": {
          "anyOf": [
            {
              "type": "string",
              "enum": [
                "site:authorized",
                "queue:write",
                "queue:force-write",
                "settings:write",
                "vote:manage",
                "filters:write-all",
                "squad-server:end-match",
                "squad-server:disable-slm-updates",
                "squad-server:turn-fog-off",
                "battlemetrics:write-flags"
              ]
            },
            {"description": "include all", "type": "string", "const": "*"},
            {
              "description": "negated permissions. takes precedence wherever present for a user",
              "type": "string",
              "pattern": "^!"
            }
          ]
        }
      }
    },
    "roleAssignments": {
      "type": "object",
      "properties": {
        "discord-role": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "discordRoleId": {
                "description": "A string representation of a big integer that is parsed to a BigInt",
                "type": "string",
                "pattern": "^-?\\d+$"
              },
              "roles": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 3,
                  "maxLength": 32,
                  "pattern": "^[a-z0-9-]+$"
                }
              }
            },
            "required": ["discordRoleId", "roles"]
          }
        },
        "discord-user": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "userId": {
                "description": "A string representation of a big integer that is parsed to a BigInt",
                "type": "string",
                "pattern": "^-?\\d+$"
              },
              "roles": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 3,
                  "maxLength": 32,
                  "pattern": "^[a-z0-9-]+$"
                }
              }
            },
            "required": ["userId", "roles"]
          }
        },
        "discord-server-member": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "roles": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 3,
                  "maxLength": 32,
                  "pattern": "^[a-z0-9-]+$"
                }
              }
            },
            "required": ["roles"]
          }
        }
      }
    },
    "balanceTriggerLevels": {
      "description": "Configures the trigger warning levels for balance calculations",
      "default": {"150x2": "warn"},
      "type": "object",
      "propertyNames": {
        "type": "string",
        "enum": ["150x2", "200x2", "RWS5", "RAM3+"]
      },
      "additionalProperties": {
        "type": "string",
        "enum": ["info", "warn", "violation"]
      }
    },
    "layerTable": {
      "default": {
        "orderedColumns": [
          {"name": "id", "visible": false},
          {"name": "Size"},
          {"name": "Layer"},
          {"name": "Map", "visible": false},
          {"name": "Gamemode", "visible": false},
          {"name": "LayerVersion", "visible": false},
          {"name": "Faction_1"},
          {"name": "Unit_1"},
          {"name": "Alliance_1", "visible": false},
          {"name": "Faction_2"},
          {"name": "Unit_2"},
          {"name": "Alliance_2", "visible": false}
        ],
        "defaultSortBy": {"type": "random"}
      },
      "type": "object",
      "properties": {
        "orderedColumns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "visible": {"description": "default true", "type": "boolean"}
            },
            "required": ["name"]
          }
        },
        "defaultSortBy": {
          "description": "if not provided, no sorting will be done",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "type": {"type": "string", "const": "column"},
                "sortBy": {"type": "string"},
                "direction": {
                  "default": "ASC",
                  "type": "string",
                  "enum": ["ASC", "DESC", "ASC:ABS", "DESC:ABS"]
                }
              },
              "required": ["type", "sortBy"]
            },
            {
              "type": "object",
              "properties": {
                "type": {"type": "string", "const": "random"},
                "seed": {"type": "string"}
              },
              "required": ["type"]
            }
          ]
        },
        "extraLayerSelectMenuItems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "column": {"type": "string"},
              "code": {
                "type": "string",
                "enum": [
                  "lt",
                  "gt",
                  "inrange",
                  "isnull",
                  "notnull",
                  "in",
                  "notin",
                  "eq",
                  "neq",
                  "is-true"
                ]
              },
              "value": {
                "anyOf": [
                  {"type": "number"},
                  {"type": "string"},
                  {"type": "null"}
                ]
              },
              "values": {
                "type": "array",
                "items": {"anyOf": [{"type": "string"}, {"type": "null"}]}
              },
              "range": {
                "type": "array",
                "prefixItems": [{"type": "number"}, {"type": "number"}]
              },
              "allMasks": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "alliance": {
                        "anyOf": [
                          {"type": "array", "items": {"type": "string"}},
                          {"type": "null"}
                        ]
                      },
                      "faction": {
                        "anyOf": [
                          {"type": "array", "items": {"type": "string"}},
                          {"type": "null"}
                        ]
                      },
                      "unit": {
                        "anyOf": [
                          {"type": "array", "items": {"type": "string"}},
                          {"type": "null"}
                        ]
                      }
                    }
                  }
                }
              },
              "mode": {"type": "string", "enum": ["split", "both", "either"]}
            }
          }
        },
        "defaultExtraFilters": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 3,
            "maxLength": 64,
            "pattern": "^[a-z0-9-_]+$"
          }
        }
      },
      "required": ["orderedColumns", "defaultSortBy"]
    },
    "playerFlagColorHierarchy": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid",
        "pattern": "^([0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-8][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}|00000000-0000-0000-0000-000000000000|ffffffff-ffff-ffff-ffff-ffffffffffff)$"
      }
    },
    "playerFlagGroupings": {
      "type": "object",
      "propertyNames": {"type": "string"},
      "additionalProperties": {
        "type": "object",
        "properties": {
          "associations": {
            "type": "object",
            "propertyNames": {
              "type": "string",
              "format": "uuid",
              "pattern": "^([0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-8][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}|00000000-0000-0000-0000-000000000000|ffffffff-ffff-ffff-ffff-ffffffffffff)$"
            },
            "additionalProperties": {"type": "number"}
          },
          "color": {"type": "string"}
        },
        "required": ["associations", "color"]
      }
    },
    "navLinks": {
      "description": "Links to display in the navbar dropdown menu",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {"type": "string"},
          "url": {"type": "string", "format": "uri"}
        },
        "required": ["label", "url"]
      }
    }
  },
  "required": [
    "$schema",
    "servers",
    "layerQueue",
    "vote",
    "squadServer",
    "commandPrefix",
    "adminListSources",
    "homeDiscordGuildId",
    "globalRolePermissions",
    "roleAssignments"
  ]
}