{
  "type": "object",
  "properties": {
    "serverId": {"type": "string", "minLength": 1, "maxLength": 256},
    "serverDisplayName": {"type": "string", "minLength": 1, "maxLength": 256},
    "commandPrefix": {"type": "string", "pattern": "^\\S+$"},
    "defaults": {
      "type": "object",
      "properties": {
        "voteDurationSeconds": {
          "type": "number",
          "exclusiveMinimum": 0,
          "default": 60,
          "description": "Duration of a vote in seconds"
        },
        "minValidVotePercentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum threshold for a vote tally to be valid"
        }
      },
      "required": ["minValidVotePercentage"],
      "additionalProperties": false
    },
    "commands": {
      "type": "object",
      "properties": {
        "help": {
          "type": "object",
          "properties": {
            "strings": {
              "type": "array",
              "items": {"$ref": "#/properties/commandPrefix"}
            },
            "scopes": {
              "type": "array",
              "items": {"type": "string", "enum": ["admin", "public"]}
            }
          },
          "required": ["strings", "scopes"],
          "additionalProperties": false,
          "description": "Show help text"
        },
        "startVote": {
          "type": "object",
          "properties": {
            "strings": {
              "$ref": "#/properties/commands/properties/help/properties/strings"
            },
            "scopes": {
              "$ref": "#/properties/commands/properties/help/properties/scopes"
            }
          },
          "required": ["strings", "scopes"],
          "additionalProperties": false,
          "description": "Start a vote for the next layer"
        },
        "abortVote": {
          "type": "object",
          "properties": {
            "strings": {
              "$ref": "#/properties/commands/properties/help/properties/strings"
            },
            "scopes": {
              "$ref": "#/properties/commands/properties/help/properties/scopes"
            }
          },
          "required": ["strings", "scopes"],
          "additionalProperties": false,
          "description": "Abort the current vote"
        },
        "showNext": {
          "type": "object",
          "properties": {
            "strings": {
              "$ref": "#/properties/commands/properties/help/properties/strings"
            },
            "scopes": {
              "$ref": "#/properties/commands/properties/help/properties/scopes"
            }
          },
          "required": ["strings", "scopes"],
          "additionalProperties": false,
          "description": "Show the next layer or configured vote"
        }
      },
      "required": ["help", "startVote", "abortVote", "showNext"],
      "additionalProperties": false
    },
    "lowQueueWarningThreshold": {
      "type": "number",
      "exclusiveMinimum": 0,
      "default": 3
    },
    "remindVoteThresholdSeconds": {
      "type": "number",
      "exclusiveMinimum": 0,
      "default": 15
    },
    "adminListSources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {"type": "string", "enum": ["remote", "local", "ftp"]},
          "source": {"type": "string"}
        },
        "required": ["type", "source"],
        "additionalProperties": false
      }
    },
    "authorizedDiscordRoles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "serverId": {"type": "string", "pattern": "^\\d+$"},
          "roleId": {"type": "string", "pattern": "^\\d+$"}
        },
        "required": ["serverId"],
        "additionalProperties": false
      },
      "minItems": 1
    },
    "$schema": {"type": "string"}
  },
  "required": [
    "serverId",
    "serverDisplayName",
    "commandPrefix",
    "defaults",
    "commands",
    "adminListSources",
    "authorizedDiscordRoles",
    "$schema"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}